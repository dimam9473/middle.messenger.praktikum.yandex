    {{> input id="login" label="Login" placeholder="Your login"}}
    {{> input id="first-name" label="First name" placeholder="First name"}}
    {{> input id="second-name" label="Second name" placeholder="Your second name"}}
    {{> input id="phone" label="Phone" placeholder="+7-999-999-9999"}}
