<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8" />
</head>
<body>
    <div>
        {{> title title="Sign In"}}
        <form>
            {{> input id="login" label="Login" placeholder="Your login"}}
            {{> input id="password" label="Password" type="password" placeholder="1234"}}
            {{> button id="enter" caption="Enter"}}
        </form>

        {{> link href="register" alt="register" text="Create account?"}}
    </div>
    <script>
        const button = document.getElementById("enter")

        button.addEventListener("click", function (e) {
            e.preventDefault()
            window.location.href = "chat"
        })
    </script>
</body>
<html>